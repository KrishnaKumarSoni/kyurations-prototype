{
  "manifest_version": 3,
  "name": "LinkedIn Profile Preview",
  "version": "1.0",
  "description": "Generate link preview of LinkedIn profiles in a popup",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}